<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#fff">

        <TextView
            android:id="@+id/check4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="31dp"
            android:gravity="center"
            android:rotation="90"
            android:text="}"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/check3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="98dp"
            android:gravity="center"
            android:rotation="90"
            android:text="}"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/right4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="121dp"
            android:layout_marginTop="137dp"
            android:scaleY="-1"
            android:visibility="invisible"
            app:srcCompat="@drawable/right" />

        <ImageView
            android:id="@+id/left4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="34dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/left" />

        <TextView
            android:id="@+id/check2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="223dp"
            android:gravity="center"
            android:rotation="90"
            android:text="}"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/right3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="186dp"
            android:layout_marginTop="135dp"
            android:scaleY="-1"
            android:visibility="invisible"
            app:srcCompat="@drawable/right" />

        <ImageView
            android:id="@+id/left3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="186dp"
            android:layout_marginTop="35dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/left" />

        <ImageView
            android:id="@+id/right2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="121dp"
            android:layout_marginTop="137dp"
            android:scaleY="-1"
            android:visibility="invisible"
            app:srcCompat="@drawable/right" />

        <ImageView
            android:id="@+id/left2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="119dp"
            android:layout_marginTop="35dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/left" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="142dp"
            android:text="------------------------------------------------------------"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/one"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="66dp"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:text="5"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/two"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/one"
            android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="1"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/three"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/one"
            android:layout_alignParentStart="true"
            android:layout_marginStart="155dp"
            android:layout_marginTop="0dp"
            android:background="@android:color/holo_purple"
            android:gravity="center"
            android:text="4"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/four"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/one"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="90dp"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="2"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/five"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/one"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:text="8"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/left"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="35dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/left" />

        <ImageView
            android:id="@+id/right"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="135dp"
            android:scaleY="-1"
            android:visibility="invisible"
            app:srcCompat="@drawable/right" />

        <TextView
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/left"
            android:layout_alignStart="@+id/one"
            android:layout_marginBottom="-35dp"
            android:text="First Pass"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/check"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="31dp"
            android:gravity="center"
            android:rotation="90"
            android:text="}"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/finish"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-66dp"
            android:layout_marginBottom="161dp"
            android:layout_toStartOf="@+id/five"
            android:visibility="invisible"
            app:srcCompat="@drawable/correct" />

        <ScrollView
            android:id="@+id/scr"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:id="@+id/cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <TextView
            android:id="@+id/scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="115dp"
            android:text="Scroll"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginTop="-115dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_arrow_downward_black_24dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="67dp"
        android:padding="5dp"
        android:text="Bubble Sort is the simplest sorting algorithm that works by repeatedly swapping the adjacent elements if they are in wrong order."
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="14dp"
        android:text="Next Step" />

</RelativeLayout>